<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_horizontal"
    android:layout_marginEnd="@dimen/spacing_horizontal"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:drawableStart="@drawable/ic_name"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            tools:text="@tools:sample/full_names"
            />

        <TextView
            android:id="@+id/job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:drawableStart="@drawable/ic_work"
            android:drawablePadding="6dp"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            tools:text="Accountant"
            />

        <TextView
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:drawableStart="@drawable/ic_gender"
            android:drawablePadding="6dp"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            tools:text="Male"
            />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="6dp"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            tools:text="calma@example.com"
            />

        <TextView
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/colorBlack"
            android:drawableStart="@drawable/ic_country"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            tools:text="Nigeria, Mali, Rwanda"
            />

        <TextView
            android:id="@+id/car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/colorBlack"
            android:drawableStart="@drawable/ic_car"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            tools:text="2009 Subaru, Blue"
            />

        <TextView
            android:id="@+id/biography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:textColor="@color/colorBlack"
            android:drawableStart="@drawable/ic_about"
            android:drawablePadding="6dp"
            tools:text="@tools:sample/lorem/random"
            tools:maxLines="3"
            />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>